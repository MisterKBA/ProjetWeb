
<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/responsive/2.1.1/css/responsive.bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js "></script>


<div class="container">
    <br />
    <div style="width:90%; margin:0 auto;">
        <table id="example" class="table table-striped table-dark table-bordered dt-responsive nowrap" width="100%" cellspacing="0">
            <thead>
                <tr>
                    <th>id</th>
                    <th>date</th>
                    <th>Aller</th>
                </tr>
            </thead>
        </table>
    </div>
</div>


<script>
    $(document).ready(function () {
         $("#example").DataTable({
            "processing": true, // for show progress bar
             "serverSide": true, // for process server sid
            "filter": true, // this is for disable filter (search box)
            "orderMulti": false, // for disable multiple column at once
            "ajax": {
                "url": "/Grid/LoadData",
                "type": "POST",
                "datatype": "json",

            },
             "columns": [

                 {"name":"id"},
                 { "name": "date" },
                 {
                     "render": function (data, type, row, meta) {
                         var date = row[1];
                         return '<a href="../Basic/Details/' + row[1] + '">Voir les photos</a>'
                     } },

             ],
             "columnDefs": [{
                 "targets": [0],
                 "visible": false,
                 "searchable": false
             }],
         });

        $('#example_filter input').unbind();
        $('#example_filter input').attr('placeholder', "Search + [ENTER]");
        $('#example_filter input').bind('keyup', function (e) {
            if (e.keyCode === 13) {
                var table = $('#example').DataTable();
                table.search(this.value);
                table.ajax.reload();
            }
        });
    });
</script>


